<div id="<%= dom_id course %>" class="max-w-sm rounded-b overflow-hidden shadow-lg hover:bg-voodoo-100">
    
    <% if course.image.present? %>
        <%= image_tag course.image, class: "w-full rounded-t" %>
    <% else %>
        <%= link_to course, class: "flex flex-col" do %>
            <%= image_tag("https://via.placeholder.com/300") %>
        <% end %>
    <% end %>
    

    <div class="px-6 flex justify-between grow">
        <div>
            <div class="flex item-center justify-between font-bold text-xl mb-2">
                <%= course.title %>
            </div>
            <p class="text-sm font-extralight">Jerome Fabricante</p>
            <div>
                <p class="text-md font-light">Free</p>
            </div>
        </div>
    </div>
</div>
