<%= form_with(model: [:admin, admin_course]) do |form| %>
    <% if admin_course.errors.any? %>
        <div style="color: red">
            <h2><%= pluralize(admin_course.errors.count, "error") %> prohibited this admin_course from being saved:</h2>

            <ul>
                <% admin_course.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="flex flex-col">
        <label class="text-sm" for="title">Title</label>
        <%= form.text_field :title, class: "rounded border-gray-200", id: "title", placeholder: "Course title" %>
    </div>

    <div class="flex flex-col mt-4">
        <label class="text-sm" for="description">Description</label>
        <%= form.rich_text_area :description, class: "rounded border-gray-200", id: "description", placeholder: "Description" %>
    </div>

    <div class="flex flex-col mt-4">
        <label class="text-sm" for="stripe_price_id">Stripe Price ID</label>
        <%= form.text_field :stripe_price_id, class: "rounded border-gray-200", id: "stripe_price_id" %>
    </div>

    <div class="flex flex-col mt-4">
        <%= admin_course.image.present? ? (image_tag admin_course.image, class: "w-64 rounded mb-2") : nil %>
        <label class="text-sm" for="cover_image">Cover Image</label>
        <%= form.file_field :image, id: "image" %>
    </div>

    <div class="flex flex-col mt-4">
        <label class="text-sm" for="paid">Paid</label>
        <%= form.check_box :paid, id: "paid", class: "rounded border-gray-200" %>
    </div>

    <div class="flex flex-col mt-4">
        <label class="text-sm" for="premium_description">Premium Description</label>
        <%= form.rich_text_area :premium_description, class: "rounded border-gray-200", id: "premium_description", placeholder: "Premium Description" %>
    </div>

    <div>
        <%= form.submit "Submit", class: "bg-amaranth-500 hover:bg-amaranth-600 text-white-50 rounded cursor-pointer px-4 py-2 mt-4" %>
    </div>
<% end %>
