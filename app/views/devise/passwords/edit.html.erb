<div class="w-full flex flex-col justify-start items-center">
    <div class="flex md:w-1/2 justify-center py-10 items-center bg-white">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: "bg-white") do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <%= f.hidden_field :reset_password_token %>

            <h1 class="text-gray-800 font-bold text-2xl mb-3">Change your Password</h1>

            <div class="flex items-center border-2 py-2 px-3 rounded-2xl mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 1 0-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-6.75a2.25 2.25 0 0 0-2.25-2.25H6.75a2.25 2.25 0 0 0-2.25 2.25v6.75a2.25 2.25 0 0 0 2.25 2.25Z" />
                </svg>

                <%= f.password_field :password, class: "pl-2 outline-non border-none border-transparent focus:border-transparent focus:ring-0", placeholder: "New Password", autocomplete: "new-password", autofocus: true %>
            </div>

            <div class="flex items-center border-2 py-2 px-3 rounded-2xl mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 1 0-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 0 0 2.25-2.25v-6.75a2.25 2.25 0 0 0-2.25-2.25H6.75a2.25 2.25 0 0 0-2.25 2.25v6.75a2.25 2.25 0 0 0 2.25 2.25Z" />
                </svg>

                <%= f.password_field :password_confirmation, class: "pl-2 outline-non border-none border-transparent focus:border-transparent focus:ring-0", placeholder: "Confirm New Password", autocomplete: "new-password" %>
            </div>

            <%= f.submit "Reset Password", class: "btn-primary" %>
            
            <div class="mt-6">
                <%= render "devise/shared/links" %>
            </div>
        <% end %>
    </div>
</div>